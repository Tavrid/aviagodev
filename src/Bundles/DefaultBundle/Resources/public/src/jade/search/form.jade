include ../form/layout
form(action='#' ng-submit="book()")
    .group-sidebar
        fieldset.tab-direction
            .input-group
                input#one-direction.radio-button(type='radio', name='direction' ng-model="searchForm.direction[0].data")
                label(for='one-direction') В одну сторону
            .input-group
                input#one-two-direction.radio-button(type='radio', name='direction' ng-model="searchForm.direction[1].data")
                label(for='one-two-direction') В обе стороны
        fieldset.form-group
            // Простой поиск
            .simple-search
                +autocamplete()(wrapClass='departure-from input-group' ang-prefix="searchForm.formValue.departureCode" search-length="3" reverse-component="1")
                .input-group.refresh
                    a(ng-click="reverse()" href='#', title='Поменять местами')
                        i.icon-refresh
                +autocamplete()(wrapClass='arriving-in input-group' ang-prefix="searchForm.formValue.arrivalCode" search-length="3" reverse-component="1")

        fieldset.form-group
            +datepicker()(attr-id="up-date" wrapClass='date-simple up-date input-group' ang-prefix="searchForm.formValue.departureDate" name="arrivalDate"  max-from="departureDate")
            +datepicker()(attr-id="up-date" wrapClass='date-simple down-date input-group' ang-prefix="searchForm.formValue.arrivalDate" name="departureDate"  max-from="arrivalDate")

        fieldset.form-group
            .additional-options
                .additional-text
                    a(href='#' ng-click="searchForm.viewAdditionalFields= !searchForm.viewAdditionalFields")
                        | Дополнительные параметры
                        i.icon-down
                div(class="additional-wrap ng-hide" ng-show="searchForm.viewAdditionalFields")
                    .form-group.passenjers-select
                        +choice()(wrapClass='adults input-group' ang-prefix="searchForm.formValue.adults")
                        +choice()(wrapClass='children input-group' ang-prefix="searchForm.formValue.children")
                        +choice()(wrapClass='infant input-group' ang-prefix="searchForm.formValue.infant")

                    .form-group
                        +checkbox()(wrapClass='checkbox-input input-group' ang-prefix="searchForm.formValue.directFlights")
                        +checkbox()(wrapClass='checkbox-input input-group' ang-prefix="searchForm.formValue.bestPrice")

                    .form-group
                        +choice()(wrapClass='aviacompany input-group' ang-prefix="searchForm.formValue.airline")
                        +choice()(wrapClass='class-service input-group' ang-prefix="searchForm.formValue.serviceClass")
        .button-buy-wrap
            button.button.button-buy(type='submit') Обновить поиск
    .group-sidebar.fast-filter
        h3 Быстрые фильтры
        // Группа формы (аэропорт вылета)
        fieldset.form-group
            p Аэропорт вылета
            .checkbox-input.input-group
                input#vnukovo.checkbox-button(type='checkbox', name='aeroport')
                label(for='vnukovo') Москва, Внуково
            .checkbox-input.input-group
                input#sheremetevo.checkbox-button(type='checkbox', name='aeroport')
                label(for='sheremetevo') Москва, Шереметьево
            .checkbox-input.input-group
                input#domodedovo.checkbox-button(type='checkbox', name='aeroport')
                label(for='domodedovo') Москва, Домодедово
        // Группа формы (Аэропорт прилета)
        fieldset.form-group
            p Аэропорт прилета
            .checkbox-input.input-group
                input#amethan.checkbox-button(type='checkbox', name='aeroport')
                label(for='amethan') Симферополь, Амет-хана Султана
            .checkbox-input.input-group
                input#zavodskoe.checkbox-button(type='checkbox', name='aeroport')
                label(for='zavodskoe') Симферополь, Заводское
        // Группа формы (Авиакомпании)
        fieldset.form-group
            p Авиакомпания
            .checkbox-input.input-group
                input#aeroflot.checkbox-button(type='checkbox', name='aviacompany')
                label(for='aeroflot') Аэрофлот
            .checkbox-input.input-group
                input#mau.checkbox-button(type='checkbox', name='aviacompany')
                label(for='mau') МАУ