            float: left;
        }
        .info-box{
            margin-bottom:20px;
            min-height: 75px;
            border: 1px solid #CCCCCC;
            padding: 10px;
            -webkit-box-shadow: 3px 3px 0px 0px rgba(47, 50, 50, 0.16);
            -moz-box-shadow:    3px 3px 0px 0px rgba(47, 50, 50, 0.16);
            box-shadow:         3px 3px 0px 0px rgba(47, 50, 50, 0.16);
        }
        .post{
