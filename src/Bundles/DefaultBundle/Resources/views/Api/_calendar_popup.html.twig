<style>
.down-time-block .panel {
    margin-bottom: 0;
}

#calendar-modal .well {
    margin-bottom: 0;
}

#calendar-modal .modal-body {
    padding-bottom: 0;
}

</style>
<div class="modal fade" id="calendar-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">{% trans %}frontend.default.modal.title{% endtrans %}</h4>
            </div>
            <div class="modal-body">
                {% include 'BundlesDefaultBundle:Api:_items.html.twig' with {data : [ticket],needBook: false} %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-close-popup btn btn-default" data-dismiss="modal">{% trans %}frontend.default.modal.close{% endtrans %}</button>
                <a href="{{ path('bundles_default_api_list',routeParams) }}" class="btn btn-primary">{% trans %}frontend.default.modal.search{% endtrans %}</a>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function($) {
        $('.btn-transplant').popover({
            html: true
        });   
        $('.btn-close-popup').click(function(event) {
            $('.popover').hide();
        });
    });
</script>