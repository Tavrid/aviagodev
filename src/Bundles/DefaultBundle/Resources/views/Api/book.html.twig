{% block body %}
    <div class="col-md-3 total-price-block">
        <h3>{%trans%}frontend.default.order.order_info{%endtrans%}</h3>
        <hr />
        <strong>{%trans%}frontend.default.order.total{%endtrans%}: 
            <div class="total-price">{{ ticket.totalPrice|number_format(0, '.', ' ')  }} {{ ticket.currency}}</div></strong>

    </div>
    <div class="col-md-9 order-block">
        <h3>{{ ticket.routes|join(' - ') }}</h3>
        <div style="margin-bottom: 50px">

            <ul class="nav nav-tabs" role="tablist">
                <li class="active">
                    <a href="#rules" role="tab" data-toggle="tab">
                        {%trans%}frontend.default.order.fare_rules{%endtrans%}
                    </a>
                </li>
                <li class="">
                    <a href="#info" role="tab" data-toggle="tab">{%trans%}frontend.default.order.flight_details{%endtrans%}</a>
                </li>
            </ul>
            <div class="tab-content book-tab">
                <div class="tab-pane active rules-tab" id="rules" style="padding: 15px">
                    <div class="">
                        Если в вашем билете несколько рейсов, при неявке на один из них авиакомпания имеет право отменить бронь на оставшиеся рейсы.
                    </div>
                    <hr />
                    <table class="table">
                        <thead>
                        <tr>
                            <th>{%trans%}frontend.default.order.passengers{%endtrans%}</th>
                            <th>{%trans%}frontend.default.order.rate_taxes{%endtrans%}</th>
                            <th>{%trans%}frontend.default.order.number_off{%endtrans%}</th>
                            <th>{%trans%}frontend.default.order.in_total{%endtrans%}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for t,travelers in ticket.travelers %}
                            {% if travelers >0 %}
                                {% set pricing = ticket.pricingByName(t) %}
                                <tr>
                                    <td>{{ ("frontend.default.order.passenger."~t)|trans }}</td>
                                    <td>({{ pricing.Base|number_format(0, '.', ' ')}} + {{ pricing.Tax|number_format(0, '.', ' ') }})</td>
                                    <td>x{{ travelers }}</td>
                                    <td>{{ (pricing.Total*travelers)|number_format(0, '.', ' ') }} {{ ticket.currency}}</td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        <tr>
                            <td></td>
                            <td></td>
                            <td>
                                <strong>{%trans%}frontend.default.order.tariff_collection{%endtrans%}:</strong>
                            </td>
                            <td>{{ ticket.tariffCollection|number_format(0, '.', ' ')}} {{ ticket.currency}}</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td>
                                <strong>{%trans%}frontend.default.order.in_total{%endtrans%}:</strong>
                            </td>
                            <td>{{ ticket.totalPrice|number_format(0, '.', ' ')}} {{ ticket.currency}}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane tab-info list-in-tab" id="info">
                    {% include 'BundlesDefaultBundle:Api:_items.html.twig' with {data: [ticket],needBook: false} %}
                </div>
            </div>
        </div>

        {% if ticket.latinRegistration %}
            <div class="alert alert-warning" role="alert">{%trans%}frontend.default.order.latin_registration{%endtrans%}</div>
        {% endif %}
        <form action="" method="post" id="order-form">
            {{ form_errors(form) }}
            <div>
                <ul class="nav nav-tabs" role="tablist">
                    {% for adt in form.passengers.ADT %}
                        <li class="{% if loop.first %}active{% endif %}">
                            <a href="#adult{{ loop.index }}" role="tab" data-toggle="tab">
                                {% trans with {'%count%': loop.index} %}frontend.default.order.pass.adt{% endtrans %}
                            </a>
                        </li>
                    {% endfor %}
                    {% for chd in form.passengers.CHD %}
