{% extends 'AcmeAdminBundle:Layouts:main.html.twig' %}
{% block body %}
    <h1>Список аэропортов</h1>
    <div class="well">
        <form class="form-inline" action="{{ path('admin.aviaairports.index') }}" method="GET">
            <div class="form-group">
                {{ form_widget(filterForm.city_code,{attr: {placeholder: 'Код города'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(filterForm.airport_code,{attr: {placeholder: 'Код аэропорта'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(filterForm.city_name,{attr: {placeholder: 'Название города'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(filterForm.country_name,{attr: {placeholder: 'Название страны'}}) }}
            </div>

            <button type="submit" class="btn btn-default">Применить фильтр</button>
            <a href="{{ path('admin.aviaairports.index') }}" class="btn btn-default">Очистить фильтр</a>
        </form>
    </div>
    {{ bootstrapTable(data,params) |raw}}
    {{pagerHtml|raw}}
{% endblock %}