{% macro boolIcon(value,notify = null) %}
    {% if value %}
        {%  set class = 'fa fa-check-circle true-color' %}
    {% else %}
        {% set class = 'fa fa-minus-circle false-color'  %}
    {% endif %}
    <i class="{{ class }}"
            {% if(notify) %}
                data-toggle="tooltip" data-original-title="{{ notify }}"
            {% endif %} style="font-size: 17px;"></i>
{% endmacro %}

{{ _self.boolIcon(value,notify) }}


