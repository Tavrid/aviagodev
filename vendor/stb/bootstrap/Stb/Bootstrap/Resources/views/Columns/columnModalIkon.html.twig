    <div id="popup-{{ id }}" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                </div>
                <div class="modal-body">
                    <table class="table table-striped">
                        <tbody class="table-center-align">
                        {% for v in data %}
                            <tr>
                                <td>{{ v.name|upper|replace({'[': '', ']': ''}) }}</td>
                                <td>{{ v.value }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
<div id="{{ id }}"
        {% if (notify) %}
            title="{{ notify }}"
        {% endif %}
   data-toggle="modal" class="btn btn-default modal-link" style="padding: 2px 9px;">
    <i  class="{{ icon }}"></i>

    <script type="text/javascript">
        $(document).ready(function(){
            (function(){
                {#var popup = $('#popup-{{ id }}').popup({#}
                    {#closeSelectors: ['.btn-danger']#}
