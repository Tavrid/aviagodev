


<link rel="stylesheet" href="{{ asset('/bundles/stbbootstrap/lib/font-awesome/css/font-awesome.css') }}">
<link rel="stylesheet" href="{{ asset('/bundles/stbbootstrap/css/style.css') }}">
<script type="text/javascript" src="{{ asset('/bundles/stbbootstrap/common.js') }}"></script>
<script type="text/javascript" src="{{ asset('/bundles/stbbootstrap/lib/popup.js') }}"></script>
<table class="table table-hover">
    <thead>
    <tr>
        {% for column in params.columns %}
            {% if (column.header is defined) %}
                <th>{{ column.header }}</th>
            {% else %}

                <th>{{ ((column is iterable) ? column.name:column) |upper|replace({'[': '', ']': ''})}}</th>
            {% endif %}
        {% endfor %}
        {% if(params.actions is defined) %}
            <th class="table-actions">Действия</th>
        {% endif %}
    </tr>
    </thead>
    <tbody>
        {{ list|raw }}
    </tbody>
</table>
{% if(params.pagerHtml is defined) %}
    {{ params.pagerHtml|raw }}
{% endif %}
<style >
    .true-color{
        color: #0025fe;
    }
    .false-color{
        color: #FE1A00;
    }
    .table-actions{
        text-align: right;
    }
    .table-center-align{
        text-align: center;
    }
</style>


